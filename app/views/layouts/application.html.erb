<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= render 'layouts/rails_default' %>
	<%= render 'layouts/shim' %>
	 <%= yield :head %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>

		<%= yield :content %>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>